<Window x:Class="Tesouraria.Desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tesouraria Paroquial - Login" Height="350" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Bem-vindo" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Height="30" Margin="0,5,0,10"/>

            <TextBlock Text="Senha:"/>
            <PasswordBox x:Name="txtSenha" Height="30" Margin="0,5,0,20"/>

            <Button x:Name="btnLogin" Content="Entrar" Height="40" Click="BtnLogin_Click" IsDefault="True"/>
            <TextBlock x:Name="txtErro" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>