<Window x:Class="Tesouraria.Desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tesouraria.Desktop"
        mc:Ignorable="d"
        Title="Login - Tesouraria Paroquial" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F0F2F5" WindowStyle="None">

    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#2D3E50" Offset="0.0"/>
                <GradientStop Color="#4B6CB7" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="White" Width="350" Height="400" CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center">

            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.3" Direction="270"/>
            </Border.Effect>

            <StackPanel Margin="30" VerticalAlignment="Center">

                <TextBlock Text="TESOURARIA" Foreground="#2D3E50" FontSize="24" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,5"/>
                <TextBlock Text="Acesso Restrito" Foreground="Gray" FontSize="14" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock x:Name="TxtErro" Foreground="#D13438" FontSize="12" FontWeight="SemiBold"
                           HorizontalAlignment="Center" Margin="0,0,0,10" TextWrapping="Wrap"
                           TextAlignment="Center"/>

                <Label Content="E-mail" FontWeight="SemiBold"/>
                <TextBox x:Name="TxtEmail" Height="35" Padding="5" VerticalContentAlignment="Center" Margin="0,0,0,15" FontSize="14"/>

                <Label Content="Senha" FontWeight="SemiBold"/>
                <PasswordBox x:Name="TxtSenha" Height="35" Padding="5" VerticalContentAlignment="Center" Margin="0,0,0,20" FontSize="14"/>

                <Button x:Name="BtnEntrar" Content="ENTRAR" Height="40" 
                        Background="#0078D7" Foreground="White" FontWeight="Bold" Cursor="Hand"
                        Style="{StaticResource RoundedButtonStyle}"
                        Click="BtnEntrar_Click"/>

                <Button Content="Sair do Sistema" Margin="0,15,0,0" Background="Transparent" 
                        BorderThickness="0" Foreground="#666" Cursor="Hand" Click="BtnSair_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>