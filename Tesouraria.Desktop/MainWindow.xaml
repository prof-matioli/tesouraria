<Window x:Class="Tesouraria.Desktop.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:Tesouraria.Desktop"
       mc:Ignorable="d"
       Title="Sistema de Tesouraria - Paróquia" Height="600" Width="900"
       WindowState="Maximized"
       WindowStartupLocation="CenterScreen" Background="#F0F2F5">

   <Grid>
       <Grid.ColumnDefinitions>
           <ColumnDefinition Width="200"/>
           <ColumnDefinition Width="*"/>
       </Grid.ColumnDefinitions>

       <Border Grid.Column="0" Background="#2D3E50">
           <StackPanel Margin="10">
               <TextBlock Text="TESOURARIA" Foreground="White" FontSize="20" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,20,0,30"/>

               <TextBlock Text="CADASTROS" Foreground="#A0A0A0" FontSize="12" Margin="10,0,0,5"/>

               <Button x:Name="BtnMenuFieis" Content="Fieis" Height="40" Margin="0,0,0,5" 
                       Background="Transparent" Foreground="White" BorderThickness="0" 
                       HorizontalContentAlignment="Left" Padding="15,0" Click="BtnAbrirFieis_Click"/>

               <Button Content="Fornecedores" Height="40" Margin="0,0,0,5" 
                       Background="Transparent" Foreground="White" BorderThickness="0" 
                       HorizontalContentAlignment="Left" Padding="15,0" Click="BtnAbrirFornecedores_Click"/>

                <Button Content="Centros de Custo" Height="40" Margin="0,0,0,5" 
                       Background="Transparent" Foreground="White" BorderThickness="0" 
                       HorizontalContentAlignment="Left" Padding="15,0" Click="BtnAbrirCentroCusto_Click"/>

                <Button Content="Plano de Contas" Height="40" Margin="0,0,0,5" 
                       Background="Transparent" Foreground="White" BorderThickness="0" 
                       HorizontalContentAlignment="Left" Padding="15,0" Click="BtnAbrirPlanoContas_Click"/>
                
               <TextBlock Text="FINANCEIRO" Foreground="#A0A0A0" FontSize="12" Margin="10,20,0,5"/>
                <Button Content="Lançamentos" Height="40" Margin="0,0,0,5" 
                       Background="Transparent" Foreground="White" BorderThickness="0" 
                       HorizontalContentAlignment="Left" Padding="15,0" Click="BtnAbrirTesouraria_Click"/>
            </StackPanel>
       </Border>
   </Grid>
</Window>