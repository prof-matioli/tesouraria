<Window x:Class="Tesouraria.Desktop.Views.Cadastros.CadastroFielWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tesouraria.Desktop.Views.Cadastros"
        mc:Ignorable="d"
        Title="Gestão de Fiéis" 
        Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">

    <Window.Resources>
        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20" Orientation="Horizontal">
            <TextBlock Text="👥" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <StackPanel>
                <TextBlock Text="Fiéis" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="Gerencie os membros cadastrados" FontSize="14" Foreground="#7F8C8D"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
            <DataGrid x:Name="DgDados"
                      ItemsSource="{Binding Items}" 
                      SelectedItem="{Binding SelectedItem}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      IsReadOnly="True"
                      SelectionMode="Single"
                      BorderThickness="0"
                      Background="White"
                      RowHeight="35"
                      GridLinesVisibility="Horizontal"
                      HorizontalGridLinesBrush="#F0F0F0">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#34495E"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Padding" Value="10,8"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                    </Style>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="10,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="2*"/>
                    <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="150"/>
                    <DataGridTextColumn Header="Telefone" Binding="{Binding Telefone}" Width="150"/>
                    <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="200"/>
                    <DataGridCheckBoxColumn Header="Dizimista" Binding="{Binding Dizimista}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">

            <Button Content="🔄 Atualizar" 
                    Command="{Binding BuscarCommand}"
                    Style="{StaticResource BaseButtonStyle}"
                    Background="#95A5A6" Foreground="White" Width="120"/>

            <Button Content="🗑️ Excluir" 
                    Command="{Binding ExcluirCommand}"
                    Style="{StaticResource BaseButtonStyle}"
                    Background="#E74C3C" Foreground="White" Width="120"/>

            <Button Content="✏️ Editar" 
                    Command="{Binding EditarCommand}"
                    Style="{StaticResource BaseButtonStyle}"
                    Background="#3498DB" Foreground="White" Width="120"/>

            <Button Content="➕ Novo" 
                    Command="{Binding NovoCommand}"
                    Style="{StaticResource BaseButtonStyle}"
                    Background="#2ECC71" Foreground="White"
                    Padding="20,0" Width="120"/>
        </StackPanel>
    </Grid>
</Window>