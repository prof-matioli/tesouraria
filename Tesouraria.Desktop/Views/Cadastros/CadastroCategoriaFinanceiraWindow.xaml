<Window x:Class="Tesouraria.Desktop.Views.Cadastros.CadastroCategoriaFinanceiraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Categorias Financeiras" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F4F6F7">

    <Window.Resources>
        <Style TargetType="Button" x:Key="BtnStyle">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20" Orientation="Horizontal">
            <TextBlock Text="🗂️" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <StackPanel>
                <TextBlock Text="Categorias Financeiras" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="Gerencie seu Plano de Contas" FontSize="14" Foreground="#7F8C8D"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="5">
            <DataGrid ItemsSource="{Binding Items}" 
                      SelectedItem="{Binding SelectedItem}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" IsReadOnly="True"
                      RowHeight="35" Background="White">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="2*"/>
                    <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="3*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Atualizar" Command="{Binding BuscarCommand}" Style="{StaticResource BtnStyle}"/>
            <Button Content="Excluir" Command="{Binding ExcluirCommand}" Style="{StaticResource BtnStyle}" Background="#E74C3C" Foreground="White"/>
            <Button Content="Editar" Command="{Binding EditarCommand}" Style="{StaticResource BtnStyle}" Background="#3498DB" Foreground="White"/>
            <Button Content="Novo" Command="{Binding NovoCommand}" Style="{StaticResource BtnStyle}" Background="#2ECC71" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>