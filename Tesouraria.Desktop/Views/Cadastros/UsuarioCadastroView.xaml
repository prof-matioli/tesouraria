<Window x:Class="Tesouraria.Desktop.Views.Cadastros.UsuarioCadastroView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding TituloJanela}" Height="485" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Padding="20" Background="#F8F9FA" Margin="0,0,0,-32">
        <StackPanel>
            <TextBlock Text="{Binding TituloJanela}" FontSize="18" FontWeight="SemiBold" 
                       Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <TextBlock Text="Nome Completo:" FontWeight="Medium"/>
            <TextBox Text="{Binding Entity.Nome}" Height="30" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="E-mail (Login):" FontWeight="Medium"/>
            <TextBox Text="{Binding Entity.Email}" Height="30" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Perfil de Acesso:" FontWeight="Medium"/>
            <ComboBox ItemsSource="{Binding Perfis}"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding Entity.PerfilId}"
                      Height="30" Margin="0,5,0,15" Padding="5"/>

            <TextBlock Text="Senha:" FontWeight="Medium"/>
            <PasswordBox x:Name="txtSenha" Height="30" Margin="0,5,0,5" Padding="5"
                         PasswordChanged="TxtSenha_PasswordChanged"/>

            <TextBlock Text="Deixe em branco para manter a senha atual (na edição)" 
                       FontSize="11" Foreground="Gray" FontStyle="Italic" Margin="0,0,0,15"/>

            <CheckBox Content="Usuário Ativo" IsChecked="{Binding Entity.Ativo}" 
                      Margin="0,0,0,20" FontSize="14"/>

            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{Binding FecharCommand}" 
                        Height="35" Margin="0,0,5,0" Background="#95A5A6" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="❌" Margin="0,0,8,0"/>
                        <TextBlock Text="Cancelar"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="1" Command="{Binding SalvarCommand}" 
                        Height="35" Margin="5,0,0,0" Background="#27AE60" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" Margin="0,0,8,0"/>
                        <TextBlock Text="Salvar"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>