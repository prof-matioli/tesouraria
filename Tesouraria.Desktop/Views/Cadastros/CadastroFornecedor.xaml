<Window x:Class="Tesouraria.Desktop.Views.Cadastros.CadastroFornecedor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestão de Fornecedores" Height="450" Width="600"
        xmlns:local="clr-namespace:Tesouraria.Desktop.Views.Cadastros"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Dados do Fornecedor" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ID:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Background="#EEE" Margin="0,0,0,5"/>

                <TextBlock Text="Razão Social:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtRazaoSocial" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>
                
                <TextBlock Text="Nome Fantazia:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtNomeFantasia" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5"/>

                <TextBlock Text="CNPJ:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtCNPJ" Grid.Row="3" Grid.Column="1" Margin="0,0,0,5"/>

                <TextBlock Text="Telefone:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtTelefone" Grid.Row="4" Grid.Column="1" Margin="0,0,0,5"/>
                
                <TextBlock Text="Email:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtEmail" Grid.Row="5" Grid.Column="1" Margin="0,0,0,5"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button x:Name="btnNovo" Content="Limpar / Novo" Width="100" Margin="0,0,10,0" Click="BtnNovo_Click"/>
            <Button x:Name="btnExcluir" Content="Excluir" Width="80" Margin="0,0,10,0" Background="#FFCCCC" Click="BtnExcluir_Click"/>
            <Button x:Name="btnSalvar" Content="Salvar" Width="80" FontWeight="Bold" Click="BtnSalvar_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgFornecedores" Grid.Row="2" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  SelectionChanged="DgFornecedores_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Razão Social" Binding="{Binding RazaoSocial}" Width="*"/>
                <DataGridTextColumn Header="CNPJ" Binding="{Binding CNPJ}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>