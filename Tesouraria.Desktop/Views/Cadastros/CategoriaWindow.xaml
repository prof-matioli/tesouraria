<Window x:Class="Tesouraria.Desktop.Views.Cadastros.CategoriaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Categorias Financeiras" Height="500" Width="600"
        WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Dados da Categoria" Grid.Row="0" Margin="0,0,0,10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="ID:" Grid.Row="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtId" Grid.Row="0" Grid.Column="1" IsReadOnly="True" Background="#F0F0F0" Width="60" HorizontalAlignment="Left" Margin="0,0,0,5"/>

                <TextBlock Text="Nome:" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox x:Name="txtNome" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5"/>

                <TextBlock Text="Tipo:" Grid.Row="2" VerticalAlignment="Center" Margin="0,0,10,5"/>
                <ComboBox x:Name="cbTipo" Grid.Row="2" Grid.Column="1" Margin="0,0,0,5" Width="150" HorizontalAlignment="Left"/>

                <CheckBox x:Name="chkDedutivel" Content="Dedutível do Imposto de Renda" Grid.Row="3" Grid.Column="1" Margin="0,5,0,5"/>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button x:Name="btnLimpar" Content="Novo / Limpar" Width="100" Click="BtnLimpar_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnExcluir" Content="Excluir" Width="80" Background="#FFCDD2" Click="BtnExcluir_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnSalvar" Content="Salvar" Width="80" FontWeight="Bold" Click="BtnSalvar_Click"/>
        </StackPanel>

        <DataGrid x:Name="DgDados" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" SelectionChanged="DgDados_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>

                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="100"/>

                <DataGridCheckBoxColumn Header="Dedutível IR" Binding="{Binding DedutivelIR}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>