<Window x:Class="Tesouraria.Desktop.Views.Cadastros.LancamentoCadastroView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding TituloJanela}" Height="637" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F4F6F7">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <Style x:Key="InputStyle" TargetType="Control">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border Padding="20" Margin="0,0,0,3">
        <StackPanel Margin="0,0,0,-10">
            <TextBlock Text="{Binding TituloJanela}" FontSize="20" FontWeight="Bold" 
                       Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBlock Text="Tipo de Lançamento:" FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                <RadioButton Content="Entrada (Receita)" GroupName="Tipo" 
                             IsChecked="{Binding IsReceita}" 
                             FontSize="14" Margin="0,0,20,0"/>
                <RadioButton Content="Saída (Despesa)" GroupName="Tipo" 
                             IsChecked="{Binding IsDespesa}" 
                             FontSize="14"/>
            </StackPanel>

            <TextBlock Text="Descrição:" FontWeight="Medium"/>
            <TextBox Text="{Binding Entity.Descricao}" Style="{StaticResource InputStyle}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Valor (R$):" FontWeight="Medium"/>
                    <TextBox Text="{Binding Entity.Valor, StringFormat=N2}" Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Vencimento:" FontWeight="Medium"/>
                    <DatePicker SelectedDate="{Binding Entity.DataVencimento}" Height="30" Margin="0,5,0,15"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Forma de Pagamento:" FontWeight="Medium"/>
            <ComboBox ItemsSource="{Binding FormasPagamento}"
                      SelectedItem="{Binding Entity.FormaPagamento}"
                      Style="{StaticResource InputStyle}"/>


            <TextBlock Text="Categoria Financeira:" FontWeight="Medium"/>
            <ComboBox ItemsSource="{Binding CategoriasFiltradas}"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding Entity.CategoriaId}"
                      Style="{StaticResource InputStyle}"/>

            <TextBlock Text="Centro de Custo:" FontWeight="Medium"/>
            <ComboBox ItemsSource="{Binding CentrosCusto}"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"
                      SelectedValue="{Binding Entity.CentroCustoId}"
                      Style="{StaticResource InputStyle}"/>

            <Grid>
                <StackPanel Visibility="{Binding IsReceita, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Fiel / Dizimista (Opcional):" FontWeight="Medium" Foreground="#27AE60"/>
                    <ComboBox ItemsSource="{Binding Fieis}"
                              DisplayMemberPath="Nome"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding Entity.FielId}"
                              Style="{StaticResource InputStyle}"/>
                </StackPanel>

                <StackPanel Visibility="{Binding IsDespesa, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="Fornecedor (Opcional):" FontWeight="Medium" Foreground="#C0392B"/>
                    <ComboBox ItemsSource="{Binding Fornecedores}"
                              DisplayMemberPath="RazaoSocial"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding Entity.FornecedorId}"
                              Style="{StaticResource InputStyle}"/>
                </StackPanel>
            </Grid>

            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Command="{Binding FecharCommand}" 
                        Height="40" Margin="0,0,5,0" Background="#95A5A6" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="❌" Margin="0,0,8,0"/>
                        <TextBlock Text="Cancelar"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="1" Command="{Binding SalvarCommand}" 
                        Height="40" Margin="5,0,0,0" Background="#2980B9" Foreground="White" BorderThickness="0" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💾" Margin="0,0,8,0"/>
                        <TextBlock Text="Salvar"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</Window>