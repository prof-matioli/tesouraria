<Window x:Class="Tesouraria.Desktop.Views.Cadastros.CadastroCentroCustoFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Centro de Custo" Height="312" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#F4F6F7">

    <Border Margin="15" Background="White" CornerRadius="10" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Novo Centro de Custo" FontSize="18" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Nome *" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Entity.Nome, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0,0,0,10"/>

                <TextBlock Text="Descrição (Opcional)" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Entity.Descricao, UpdateSourceTrigger=PropertyChanged}" Height="30" Margin="0,0,0,10"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancelar" Command="{Binding FecharCommand}" Width="100" Height="35" Margin="0,0,10,0"/>
                <Button Content="Salvar" Command="{Binding SalvarCommand}" Width="100" Height="35" Background="#27AE60" Foreground="White" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>