<Window x:Class="Tesouraria.Desktop.Views.Relatorios.RelatorioView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Relatório de Fluxo de Caixa" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Border Padding="20">
        <StackPanel>
            <TextBlock Text="Selecione o Período:" FontWeight="Bold" Margin="0,0,0,10"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Início:"/>
                    <DatePicker SelectedDate="{Binding DataInicio}"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Fim:"/>
                    <DatePicker SelectedDate="{Binding DataFim}"/>
                </StackPanel>
            </Grid>
            <Grid Margin="0,0,0,15">
                <CheckBox Content="Filtrar pela Data do Pagamento" IsChecked="{Binding FiltrarPorPagamento}" />
            </Grid>
            <TextBlock Text="Filtrar por Centro de Custo:" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding CentrosCusto}" 
                      DisplayMemberPath="Nome" 
                      SelectedValuePath="Id"
                      SelectedValue="{Binding CentroCustoId}"
                      Height="30" Margin="0,0,0,20"/>

            <Button Content="🖨️ GERAR RELATÓRIO PDF" 
                    Command="{Binding GerarCommand}"
                    Height="40" Background="#336699" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Border>
</Window>