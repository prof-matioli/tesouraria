<Window x:Class="Tesouraria.Desktop.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login - Tesouraria" 
        Height="450" Width="350"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        WindowStyle="None" 
        Background="Transparent" 
        AllowsTransparency="True">

    <Border CornerRadius="20" 
            Background="White" 
            BorderBrush="#DDD" 
            BorderThickness="1" 
            Margin="10"
            MouseDown="Window_MouseDown">

        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
        </Border.Effect>

        <Grid Margin="30">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="✝️" FontSize="50" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Text="TESOURARIA" FontSize="24" FontWeight="Bold" Foreground="#2D3E50" HorizontalAlignment="Center"/>
                <TextBlock Text="Acesso ao Sistema" FontSize="14" Foreground="#7F8C8D" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="E-mail" Foreground="#555" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtEmail"
                         Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                         Height="35" 
                         VerticalContentAlignment="Center" 
                         Padding="5,0"
                         FontSize="14"/>

                <TextBlock Text="Senha" Foreground="#555" Margin="0,15,0,5"/>
                <PasswordBox x:Name="TxtSenha" 
                             Height="35" 
                             VerticalContentAlignment="Center" 
                             Padding="5,0"
                             FontSize="14"/>

                <TextBlock Text="{Binding MensagemErro}" 
                           Foreground="#E74C3C" 
                           TextWrapping="Wrap" 
                           HorizontalAlignment="Center" 
                           Margin="0,15,0,5" 
                           FontWeight="SemiBold"/>

                <Button Content="{Binding BotaoTexto}" 
                        Command="{Binding EntrarCommand}"
                        CommandParameter="{Binding ElementName=TxtSenha}"
                        IsEnabled="{Binding CanLogin}"
                        Height="45" Margin="0,10,0,0"
                        Background="#2980B9" Foreground="White" FontWeight="Bold" FontSize="14"
                        Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Sair" 
                        Command="{Binding SairCommand}"
                        Background="Transparent" 
                        BorderThickness="0" 
                        Foreground="#95A5A6"
                        Margin="0,15,0,0" 
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>