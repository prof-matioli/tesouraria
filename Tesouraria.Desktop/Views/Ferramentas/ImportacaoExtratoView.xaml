<UserControl x:Class="Tesouraria.Desktop.Views.Ferramentas.ImportacaoExtratoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" d:DesignWidth="950" d:DesignHeight="600"
             Background="White">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Border Width="50" Height="50" CornerRadius="25" Background="#E0F7FA" Margin="0,0,15,0">
                <TextBlock Text="📄" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Importar Extrato Bancário" FontSize="22" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="Carregue o PDF do Sicoob para gerar lançamentos automáticos" FontSize="14" Foreground="Gray"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Padding="15" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="5" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <WrapPanel Orientation="Horizontal">

                    <StackPanel Margin="0,0,15,10">
                        <TextBlock Text="Categoria p/ Receitas (Crédito):" FontSize="11" Foreground="#27AE60" FontWeight="Bold" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding CategoriasReceita}" 
                                  DisplayMemberPath="Nome" 
                                  SelectedItem="{Binding CategoriaReceitaPadrao}" 
                                  Width="200" Height="30"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,10">
                        <TextBlock Text="Categoria p/ Despesas (Débito):" FontSize="11" Foreground="#C0392B" FontWeight="Bold" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding CategoriasDespesa}" 
                                  DisplayMemberPath="Nome" 
                                  SelectedItem="{Binding CategoriaDespesaPadrao}" 
                                  Width="200" Height="30"/>
                    </StackPanel>

                    <StackPanel Margin="0,0,15,10">
                        <TextBlock Text="Centro de Custo (Ambos):" FontSize="11" Foreground="Gray" Margin="0,0,0,3"/>
                        <ComboBox ItemsSource="{Binding CentrosCusto}" 
                                  DisplayMemberPath="Nome" 
                                  SelectedItem="{Binding CentroCustoPadrao}" 
                                  Width="200" Height="30"/>
                    </StackPanel>
                </WrapPanel>

                <Button Grid.Column="1" Command="{Binding SelecionarArquivoCommand}" 
                        Background="#3498DB" Foreground="White" Padding="20,0" Height="35" FontWeight="SemiBold" Cursor="Hand" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📂" Margin="0,0,8,0"/>
                        <TextBlock Text="Selecionar PDF"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <DataGrid Grid.Row="2" ItemsSource="{Binding Transacoes}" AutoGenerateColumns="False" 
                  IsReadOnly="True" CanUserAddRows="False" GridLinesVisibility="Horizontal" 
                  HeadersVisibility="Column" RowHeight="35" BorderThickness="1" BorderBrush="#E0E0E0" Background="White">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#F1F2F6"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Padding" Value="10,0"/>
                    <Setter Property="Height" Value="35"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Data" Binding="{Binding Data, StringFormat=dd/MM/yyyy}" Width="100"/>

                <DataGridTextColumn Header="Descrição do Extrato" Binding="{Binding Historico}" Width="*"/>

                <DataGridTextColumn Header="Tipo" Binding="{Binding TipoFormatado}" Width="100">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Tipo}" Value="C">
                                    <Setter Property="Foreground" Value="#27AE60"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Tipo}" Value="D">
                                    <Setter Property="Foreground" Value="#C0392B"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Valor" Binding="{Binding Valor, StringFormat=C2}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Margin" Value="5,0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="3" Margin="0,15,0,0" HorizontalAlignment="Right">

            <TextBlock Text="Selecione as Categorias e o Centro de Custo para salvar." 
                       FontSize="11" Foreground="Red" HorizontalAlignment="Right" Margin="0,0,0,5">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsEnabled, ElementName=btnSalvar}" Value="False">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Button x:Name="btnSalvar" Command="{Binding ProcessarCommand}" 
                    Background="#27AE60" Foreground="White" Padding="30,0" Height="40" FontWeight="Bold" Cursor="Hand"
                    ToolTip="Salvar todos os itens acima no banco de dados">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💾" Margin="0,0,8,0"/>
                    <TextBlock Text="Confirmar Importação"/>
                </StackPanel>
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>