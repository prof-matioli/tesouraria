<Window x:Class="Tesouraria.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tesouraria.Desktop.Views"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Tesouraria Paroquial - Painel Principal" 
        Height="768" Width="1024"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F7"
        WindowStyle="None"
        Closing="Window_Closing">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ECF0F1"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Content="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                                  Grid.Column="0" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  TextBlock.FontSize="18"/>
                                <ContentPresenter Content="{TemplateBinding Content}" 
                                                  Grid.Column="1" 
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#34495E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DashboardCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1" Color="#2C3E50"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,30,0,40">
                    <Border Width="70" Height="70" Background="White" CornerRadius="35" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="✝️" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="TESOURARIA" Foreground="White" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" />
                    <TextBlock Text="Sistema Paroquial" Foreground="#BDC3C7" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <TextBlock Text="CADASTROS" Foreground="#7F8C8D" FontSize="11" Margin="20,0,0,10" FontWeight="Bold"/>

                    <Button Content="Fiéis / Dizimistas" Tag="👥" Command="{Binding AbrirFieisCommand}" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="Fornecedores" Tag="🚚" Command="{Binding AbrirFornecedoresCommand}" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="Centros de Custo" Tag="🏢" Command="{Binding AbrirCentroCustoCommand}" Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="Categorias Financeiras" Tag="🗂️" Command="{Binding AbrirPlanoContasCommand}" Style="{StaticResource MenuButtonStyle}"/>

                    <TextBlock Text="FINANCEIRO" Foreground="#7F8C8D" FontSize="11" Margin="20,20,0,10" FontWeight="Bold"/>

                    <Button Content="Lançamentos" Tag="💰" Style="{StaticResource MenuButtonStyle}" Command="{Binding AbrirLancamentosCommand}"/>
                    <Button Content="Relatórios" Tag="📊" Style="{StaticResource MenuButtonStyle}" Command="{Binding AbrirRelatoriosCommand}"/>
                </StackPanel>

                <Border Grid.Row="2" BorderBrush="#34495E" BorderThickness="0,1,0,0" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Olá, Usuário" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                        <TextBlock Text="Administrador" Foreground="#BDC3C7" FontSize="12" Margin="0,2,0,10"/>
                        <Button Content="Sair do Sistema" Command="{Binding SairCommand}" Background="#C0392B" Foreground="White" BorderThickness="0" Height="35" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Visão Geral" FontSize="28" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="Resumo financeiro do mês atual" FontSize="16" Foreground="#7F8C8D"/>
            </StackPanel>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource DashboardCardStyle}" Margin="0,0,10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Background="#E8F8F5" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="⬆️" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Entradas" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Resumo.TotalReceitas, StringFormat=C2, FallbackValue=R$ 0.00}" 
                                   FontSize="24" FontWeight="Bold" Foreground="#27AE60"/>
                        <TextBlock Text="{Binding Resumo.ComparativoReceita}" FontSize="12" Foreground="#27AE60" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Style="{StaticResource DashboardCardStyle}" Margin="10,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Background="#FDEDEC" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="⬇️" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Saídas" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Resumo.TotalDespesas, StringFormat=C2, FallbackValue=R$ 0.00}" 
                                   FontSize="24" FontWeight="Bold" Foreground="#C0392B"/>
                        <TextBlock Text="{Binding Resumo.ComparativoDespesa}" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Style="{StaticResource DashboardCardStyle}" Margin="10,0,0,0">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Border Background="#EBF5FB" Width="40" Height="40" CornerRadius="20">
                                <TextBlock Text="💰" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Saldo Atual" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="SemiBold" Foreground="#7F8C8D"/>
                        </StackPanel>
                        <TextBlock Text="{Binding Resumo.Saldo, StringFormat=C2, FallbackValue=R$ 0.00}" 
                                   FontSize="24" FontWeight="Bold" Foreground="#2980B9"/>
                        <TextBlock Text="Disponível em caixa" FontSize="12" Foreground="#7F8C8D" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>

            <Border Grid.Row="2" Background="White" CornerRadius="10" Margin="0,30,0,0"
        BorderBrush="#E0E0E0" BorderThickness="1">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Evolução Financeira (Últimos 6 Meses)" 
                   FontSize="16" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15"/>

                    <lvc:CartesianChart Grid.Row="1" Series="{Binding SeriesGrafico}" LegendLocation="Bottom">

                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Mês" Labels="{Binding LabelsGrafico}" Separator="{x:Static lvc:DefaultAxes.CleanSeparator}"/>
                        </lvc:CartesianChart.AxisX>

                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Valor" LabelFormatter="{Binding YFormatter}"/>
                        </lvc:CartesianChart.AxisY>

                        <lvc:CartesianChart.DataTooltip>
                            <lvc:DefaultTooltip SelectionMode="SharedYValues"/>
                        </lvc:CartesianChart.DataTooltip>

                    </lvc:CartesianChart>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>