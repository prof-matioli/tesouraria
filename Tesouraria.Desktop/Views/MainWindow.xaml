<Window x:Class="Tesouraria.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:vm="clr-namespace:Tesouraria.Desktop.ViewModels"
        xmlns:views="clr-namespace:Tesouraria.Desktop.Views"
        xmlns:cad="clr-namespace:Tesouraria.Desktop.Views.Cadastros"
        xmlns:rel="clr-namespace:Tesouraria.Desktop.Views.Relatorios"
        xmlns:tool="clr-namespace:Tesouraria.Desktop.Views.Ferramentas"
        
        mc:Ignorable="d"
        Title="Tesouraria Paroquial - Painel Principal" 
        Height="768" Width="1024"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F7"
        Closing="Window_Closing">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:LancamentoListaViewModel}">
            <cad:LancamentoListaView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:FielListaViewModel}">
            <cad:FielListaView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:FornecedorListaViewModel}">
            <cad:FornecedorListaView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CategoriaFinanceiraListaViewModel}">
            <cad:CategoriaFinanceiraListaView />
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type vm:CentroCustoListaViewModel}">
            <cad:CentroCustoListaView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:RelatorioViewModel}">
            <rel:RelatorioView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ImportacaoExtratoViewModel}">
            <tool:ImportacaoExtratoView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:UsuarioListaViewModel}">
            <cad:UsuarioListaView />
        </DataTemplate>


        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#BDC3C7"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="0,20,20,0" Margin="0,0,10,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Content="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" 
                                                  Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.FontSize="18"/>
                                <ContentPresenter Content="{TemplateBinding Content}" Grid.Column="1" VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#34495E"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MenuSectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7F8C8D"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="25,20,0,5"/>
            <Setter Property="Opacity" Value="0.7"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2C3E50">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Margin="0,40,0,30">
                    <Border Width="60" Height="60" Background="White" CornerRadius="30" HorizontalAlignment="Center" Margin="0,0,0,15">
                        <TextBlock Text="✝️" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="TESOURARIA" Foreground="White" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" />
                    <TextBlock Text="Sistema Paroquial" Foreground="#95A5A6" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="0,0,0,20">

                        <Button Content="Visão Geral" Tag="🏠" Command="{Binding NavegarHomeCommand}" Style="{StaticResource MenuButtonStyle}"/>

                        <TextBlock Text="CADASTROS" Style="{StaticResource MenuSectionHeaderStyle}"/>
                        <Button Content="Fiéis / Dizimistas" Tag="👥" Command="{Binding NavegarFieisCommand}" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Fornecedores" Tag="🚚" Command="{Binding NavegarFornecedoresCommand}" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Centros de Custo" Tag="🏢" Command="{Binding NavegarCentroCustoCommand}" Style="{StaticResource MenuButtonStyle}"/>
                        <Button Content="Categorias Financ." Tag="🗂️" Command="{Binding NavegarPlanoContasCommand}" Style="{StaticResource MenuButtonStyle}"/>

                        <StackPanel Visibility="{Binding IsTesourariaAcessivel, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="FINANCEIRO" Style="{StaticResource MenuSectionHeaderStyle}"/>
                            <Button Content="Lançamentos" Tag="💰" Command="{Binding NavegarLancamentosCommand}" Style="{StaticResource MenuButtonStyle}"/>
                            <Button Content="Relatórios" Tag="📊" Command="{Binding NavegarRelatoriosCommand}" Style="{StaticResource MenuButtonStyle}"/>

                            <Button Content="Importar Extrato" Tag="📊" Command="{Binding NavegarImportacaoCommand}" Style="{StaticResource MenuButtonStyle}"/>
                        </StackPanel>

                        <StackPanel Visibility="{Binding IsAdministrador, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="CONFIGURAÇÕES" Style="{StaticResource MenuSectionHeaderStyle}"/>
                            <Button Content="Usuários" Tag="⚙️" Command="{Binding NavegarUsuarioCommand}" Style="{StaticResource MenuButtonStyle}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" Background="#243342" Padding="20">
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Margin="0,0,0,15" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SaudacaoUsuario}" Foreground="White" FontWeight="SemiBold" FontSize="14" 
                                       TextTrimming="CharacterEllipsis" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                        <Button Click="BtnSair_Click" Height="35" Background="#C0392B" BorderThickness="0" Cursor="Hand" ToolTip="Sair do Sistema" HorizontalAlignment="Stretch">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🚪" FontSize="14" Foreground="White" Margin="0,0,8,0"/>
                                <TextBlock Text="Sair" FontSize="12" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <ContentControl Grid.Column="1" 
                        Content="{Binding CurrentViewModel}" 
                        Margin="0" />

    </Grid>
</Window>